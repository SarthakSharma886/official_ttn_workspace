<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/et_name" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/et_pass" android:layout_marginTop="52dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:hint="Name"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/et_pass"
            app:layout_constraintTop_toBottomOf="@+id/et_name"
            app:layout_constraintBottom_toTopOf="@+id/bt_login" app:layout_constraintStart_toStartOf="@+id/et_name"
            app:layout_constraintEnd_toEndOf="@+id/et_name" android:hint="Pass"/>
    <Button
            android:text="Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_login"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/et_pass"
            android:layout_marginBottom="52dp" app:layout_constraintStart_toStartOf="@+id/et_pass"
            app:layout_constraintEnd_toEndOf="@+id/et_pass"/>
</android.support.constraint.ConstraintLayout>