<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MainActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_http" />

    <Button
        android:id="@+id/bt_http"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Http"
        app:layout_constraintEnd_toStartOf="@+id/bt_glide"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_retro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Retro"
        app:layout_constraintBottom_toBottomOf="@+id/bt_glide"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bt_glide"
        app:layout_constraintTop_toTopOf="@+id/bt_glide" />

    <Button
        android:id="@+id/bt_glide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Glide"
        app:layout_constraintBottom_toBottomOf="@+id/bt_http"
        app:layout_constraintEnd_toStartOf="@+id/bt_retro"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bt_http"
        app:layout_constraintTop_toTopOf="@+id/bt_http" />
</android.support.constraint.ConstraintLayout>